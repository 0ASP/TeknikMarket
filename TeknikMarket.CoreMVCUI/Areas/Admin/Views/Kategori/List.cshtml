@using TeknikMarket.Model.Entity;

@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model KategoriListeVm
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategori Listesi</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Arama">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Kategori No</th>
                            <th>Kategori Görünüm</th>
                            <th>Kategori Adi</th>
                            <th>Açıklama</th>
                            <th>Üst Kategorisi</th>
                            <th>Aktif/pasif</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach (Kategori item in Model.KategoriListesi)
                            {
                                <td>@item.Id</td>
                                <td>@item.KategoriAdiGorunumu</td>
                                <td>@item.KategoriAdi</td>
                                <td>@item.Aciklama</td>
                                <td>@item.UstKategori.KategoriAdi</td>

                                <td><span class="tag tag-success">Approved</span></td>
                                <td><a class="btn btn accept-success">Düzenle</a></td>
                            <td><a class="btn btn accept-danger">Sil</a></td>

                            }


                            
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>